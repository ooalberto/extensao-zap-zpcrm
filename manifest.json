{
  "description": "Transforme seu WhatsApp em uma máquina de vendas com o ZPCRM. Automação, Kanban e muito mais: extensao.zpcrm.com.br",
  "version": "1.0.0",
  "manifest_version": 3,
  "name": "ZPCRM",
  "short_name": "ZPCRM",
  "background": { "service_worker": "background.bundle.js" },
  "permissions": [
    "tabs",
    "storage",
    "unlimitedStorage",
    "notifications",
    "identity",
    "identity.email",
    "management",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://*.whatsapp.com/*",
    "*://whatsup.plus/*",
    "*://*.whatsapp.net/*",
    "*://127.0.0.1/*",
    "*://localhost/*",
    "*://app.lotsofwms.in/*"
    ],
  "action": { "default_icon": "icon-34.png" },
  "chrome_url_overrides": {},
  "icons": { "16": "icon-16.png", "48": "icon-48.png", "50": "icon-128.png" },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },

  "content_scripts": [
    {
      "matches": ["*://*.whatsapp.com/*"],
      "js": [ "contentScript.bundle.js", "./images/bootstrap.js", "elementx.js" ],
      "css": [
        "content.styles.css",
        "./images/bootstrap.css",
        "css/fontawesome.min.css",
        "css/all.min.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icon-128.png",
        "icon-48.png",
        "icon-16.png",
        "icon-34.png",
        "images/*",
        "content.styles.css",
        "inject.styles.css",
        "injectScript.bundle.js",
        "contact_upload.csv",
        "contact_upload.xlsx",
        "css/fontawesome.min.css",
        "css/all.min.css",
        "webfonts/*"
      ],
      "matches": ["*://*.whatsapp.com/*"]
    }
  ],
  "oauth2": {
    "client_id": "569251955872-t270khigcuim74o68ja68h8aib3aduro.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/contacts",
      "https://www.googleapis.com/auth/userinfo.profile",
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/calendar",
      "https://www.googleapis.com/auth/calendar.events"
    ]
  }
}
